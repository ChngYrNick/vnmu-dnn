{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "preserveWatchOutput": true
  },
  "include": [
    "*",
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
