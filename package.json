{
  "name": "salutem",
  "version": "1.0.0",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "dotenvx run --env-file=.env.production -- node src/main.js",
    "build": "npm run web:ui:build",
    "dev": "npm run web:ui:build && concurrently -n \"web:ui,web:server\" -c \"blue,green\" -k \"npm run web:ui:dev\" \"npm run web:server:dev\"",
    "web:server:dev": "dotenvx run -- node --inspect --watch-path=./dist --watch src/main.js",
    "web:ui:build": "vite build",
    "web:ui:dev": "vite build --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Serhii Moskovko",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.8",
    "@types/nunjucks": "^3.2.6",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-prettier": "^5.2.3",
    "glob": "^11.0.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.2",
    "vite": "^6.2.1"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.38.5",
    "@fastify/cookie": "^11.0.2",
    "@fastify/session": "^11.1.0",
    "@fastify/static": "^8.1.1",
    "@fastify/view": "^10.0.2",
    "better-sqlite3": "^11.8.1",
    "fastify": "^5.2.1",
    "nunjucks": "^3.2.4"
  }
}
